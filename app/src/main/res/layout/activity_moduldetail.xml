<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF1F6"
    tools:context=".UI.activity.ModuldetailActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/NavModul"
        style="@style/MyBottomNavigationStyle"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#EEF1F6"
        app:itemIconTint="@color/bottom_nav_item_selected"
        app:itemTextColor="@color/bottom_nav_item_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/buttom_moduldetail"/>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NavModul" />

</androidx.constraintlayout.widget.ConstraintLayout>